<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="pe/egcc/eureka/app/dao/configuracion.properties" />
	<typeAliases>
		<package name="pe.egcc.eureka.app.model" />
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="pe/egcc/eureka/app/dao/mapper/EmpleadoMapper.xml" />
		<mapper resource="pe/egcc/eureka/app/dao/mapper/ClienteMapper.xml" />
		<mapper resource="pe/egcc/eureka/app/dao/mapper/CuentaMapper.xml" />
		<mapper resource="pe/egcc/eureka/app/dao/mapper/ContadorMapper.xml" />
	</mappers>
</configuration>

